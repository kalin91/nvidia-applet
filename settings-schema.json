{
  "section1": {
    "type": "section",
    "description": "Display Settings"
  },
  "refresh-interval": {
    "type": "spinbutton",
    "default": 2000,
    "min": 500,
    "max": 60000,
    "step": 500,
    "units": "ms",
    "description": "Refresh Interval",
    "tooltip": "How often to update the GPU stats (in milliseconds)."
  },
  "show-temp": {
    "type": "switch",
    "default": true,
    "description": "Show Temperature",
    "tooltip": "Show GPU temperature in the panel."
  },
  "show-memory": {
    "type": "switch",
    "default": true,
    "description": "Show Memory Usage",
    "tooltip": "Show GPU memory usage in the panel."
  },
  "memory-display-mode": {
    "type": "combobox",
    "default": "text",
    "options": {
      "Text (Used / Total)": "text",
      "Pie Chart": "pie"
    },
    "description": "Memory Display Mode",
    "tooltip": "Choose how to display memory usage: as text or as a pie chart.",
    "dependency": "show-memory"
  },
  "show-gpu-util": {
    "type": "switch",
    "default": false,
    "description": "Show GPU Utilization",
    "tooltip": "Show GPU utilization percentage in the panel."
  },
  "gpu-display-mode": {
    "type": "combobox",
    "default": "text",
    "options": {
      "Text (Percent)": "text",
      "Pie Chart": "pie"
    },
    "description": "GPU Display Mode",
    "tooltip": "Choose how to display GPU utilization: as text or as a pie chart.",
    "dependency": "show-gpu-util"
  },
  "show-fan-speed": {
    "type": "switch",
    "default": false,
    "description": "Show Fan Speed",
    "tooltip": "Show GPU fan speed percentage in the panel."
  },
  "fan-display-mode": {
    "type": "combobox",
    "default": "text",
    "options": {
      "Text (Percent)": "text",
      "Pie Chart": "pie"
    },
    "description": "Fan Display Mode",
    "tooltip": "Choose how to display fan speed: as text or as a pie chart.",
    "dependency": "show-fan-speed"
  },
  "encoding": {
    "type": "combobox",
    "default": "utf8",
    "options": {
      "UTF-8": "utf8",
      "ibm866": "ibm866",
      "iso-8859-2": "iso-8859-2",
      "iso-8859-3": "iso-8859-3",
      "iso-8859-4": "iso-8859-4",
      "iso-8859-5": "iso-8859-5",
      "iso-8859-6": "iso-8859-6",
      "iso-8859-7": "iso-8859-7",
      "iso-8859-8": "iso-8859-8",
      "iso-8859-8-i": "iso-8859-8-i",
      "iso-8859-10": "iso-8859-10",
      "iso-8859-13": "iso-8859-13",
      "iso-8859-14": "iso-8859-14",
      "iso-8859-15": "iso-8859-15",
      "iso-8859-16": "iso-8859-16",
      "koi8-r": "koi8-r",
      "koi8-u": "koi8-u",
      "macintosh": "mac",
      "windows-874": "windows-874",
      "windows-1250": "windows-1250",
      "windows-1251": "windows-1251",
      "ASCII": "windows-1252",
      "windows-1253": "windows-1253",
      "windows-1254": "windows-1254",
      "windows-1255": "windows-1255",
      "windows-1256": "windows-1256",
      "windows-1257": "windows-1257",
      "windows-1258": "windows-1258",
      "x-mac-cyrillic": "x-mac-cyrillic",
      "gbk": "gbk",
      "gb18030": "gb18030",
      "big5": "big5",
      "euc-jp": "euc-jp",
      "iso-2022-jp": "iso-2022-jp",
      "shift_jis": "sjis",
      "euc-kr": "euc-kr",
      "utf-16be": "utf-16be",
      "utf-16le": "utf-16le"
    },
    "description": "nvidia-smi Output Encoding",
    "tooltip": "Select the character encoding used by nvidia-smi output."
  }
}
