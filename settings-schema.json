{
    "refresh-interval": {
        "type": "spinbutton",
        "default": 2.0,
        "min": 0.5,
        "max": 60.0,
        "step": 0.5,
        "digits": 1,
        "units": "seconds",
        "description": "Refresh Interval (seconds)"
    },
    "show-temp": {
        "type": "checkbox",
        "default": true,
        "description": "Show Temperature"
    },
    "show-memory": {
        "type": "checkbox",
        "default": true,
        "description": "Show Memory Usage"
    },
    "show-gpu-util": {
        "type": "checkbox",
        "default": false,
        "description": "Show GPU Utilization"
    },
    "show-fan-speed": {
        "type": "checkbox",
        "default": false,
        "description": "Show Fan Speed"
    }
}
